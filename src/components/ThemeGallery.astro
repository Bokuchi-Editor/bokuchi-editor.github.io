---
import type { T } from '../i18n/en';

interface Props {
  t: T;
}

const { t } = Astro.props;

const themeColors: Record<string, { bg: string; accent: string }> = {
  default: { bg: '#ffffff', accent: '#1976d2' },
  dark:    { bg: '#121212', accent: '#90caf9' },
  pastel:  { bg: '#fafafa', accent: '#a8d5ba' },
  vivid:   { bg: '#ffffff', accent: '#ff6b35' },
  darcula: { bg: '#2b2b2b', accent: '#cc7832' },
};
---

<section class="section section--dark gallery" id="themes" aria-labelledby="gallery-title">
  <!-- Subtle grid -->
  <div class="gallery__bg-grid" aria-hidden="true"></div>

  <div class="container gallery__inner">
    <div class="gallery__header reveal">
      <h2 class="section-title" id="gallery-title">{t.gallery.sectionTitle}</h2>
      <p class="gallery__subtitle">{t.gallery.sectionSubtitle}</p>
    </div>

    <div class="gallery__grid">
      {t.gallery.themes.map((theme, i) => {
        const colors = themeColors[theme.key] ?? themeColors.default;
        return (
          <div
            class="gallery__card reveal"
            style={`animation-delay: ${i * 0.08}s`}
          >
            <!-- Preview frame -->
            <div class="gallery__frame">
              <div class="gallery__frame-titlebar" style={`background: ${colors.bg === '#ffffff' || colors.bg === '#fafafa' ? '#e8e8e8' : '#3c3c3c'}`}>
                <span class="gallery__frame-dot" style="background: #ff5f57"></span>
                <span class="gallery__frame-dot" style="background: #febc2e"></span>
                <span class="gallery__frame-dot" style="background: #28c840"></span>
                <span class="gallery__frame-title" style={`color: ${colors.bg === '#ffffff' || colors.bg === '#fafafa' ? 'rgba(0,0,0,0.4)' : 'rgba(255,255,255,0.35)'}`}>
                  Bokuchi â€” {theme.name}
                </span>
              </div>
              <div class="gallery__screenshot-wrap" style={`background: ${colors.bg}`}>
                <img
                  src={theme.screenshotSrc}
                  alt={`Bokuchi ${theme.name} theme screenshot`}
                  width="640"
                  height="400"
                  loading="lazy"
                  decoding="async"
                  class="gallery__screenshot"
                />
              </div>
            </div>

            <!-- Label -->
            <div class="gallery__label">
              <span
                class="gallery__theme-dot"
                style={`background: ${colors.accent}`}
                aria-hidden="true"
              ></span>
              <span class="gallery__theme-name">{theme.name}</span>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
.gallery {
  position: relative;
  overflow: hidden;
}

.gallery__bg-grid {
  position: absolute;
  inset: 0;
  background-image:
    linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
  background-size: 40px 40px;
}

.gallery__inner {
  position: relative;
  z-index: 1;
}

.gallery__header {
  text-align: center;
  margin-bottom: 3.5rem;
}

.gallery__subtitle {
  font-size: clamp(1rem, 1.5vw, 1.125rem);
  color: rgba(255, 255, 255, 0.5);
  margin-top: 0.75rem;
  line-height: 1.6;
}

.gallery__grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 1.25rem;
}

.gallery__card {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  cursor: default;
}

.gallery__frame {
  border-radius: var(--radius-md);
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
  transition: transform var(--transition-base), box-shadow var(--transition-base), border-color var(--transition-base);
}

.gallery__card:hover .gallery__frame {
  transform: translateY(-6px) scale(1.02);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
  border-color: rgba(255, 255, 255, 0.18);
}

.gallery__frame-titlebar {
  height: 24px;
  display: flex;
  align-items: center;
  padding: 0 8px;
  gap: 5px;
}

.gallery__frame-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  flex-shrink: 0;
}

.gallery__frame-title {
  font-size: 0.625rem;
  margin-left: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gallery__screenshot-wrap {
  line-height: 0;
  aspect-ratio: 16 / 10;
  overflow: hidden;
}

.gallery__screenshot {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: top left;
  display: block;
}

.gallery__label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0 0.25rem;
}

.gallery__theme-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  flex-shrink: 0;
}

.gallery__theme-name {
  font-size: 0.9375rem;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.85);
}

/* Responsive */
@media (max-width: 1100px) {
  .gallery__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 700px) {
  .gallery__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .gallery__grid {
    grid-template-columns: 1fr;
    max-width: 320px;
    margin: 0 auto;
  }
}
</style>
