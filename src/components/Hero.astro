---
import type { T } from '../i18n/en';

interface Props {
  t: T;
}

const { t } = Astro.props;
const isJa = t.lang === 'ja';
---

<section class="hero" id="hero">
  <!-- Background grid -->
  <div class="hero__bg-grid" aria-hidden="true"></div>
  <!-- Glow blobs -->
  <div class="hero__blob hero__blob--1" aria-hidden="true"></div>
  <div class="hero__blob hero__blob--2" aria-hidden="true"></div>

  <div class="container hero__inner">
    <!-- Left: Text content -->
    <div class="hero__content">
      <div class="hero__badge reveal">
        <span class="hero__badge-dot"></span>
        <span>Free &amp; Open Source</span>
      </div>

      <h1 class="hero__headline reveal" style="animation-delay: 0.1s">
        <span>{t.hero.headline1}</span>
        <span class="gradient-text">{t.hero.headline2}</span>
      </h1>

      <p class="hero__subheadline reveal" style="animation-delay: 0.2s">
        {t.hero.subheadline}
      </p>

      <div class="hero__cta reveal" style="animation-delay: 0.3s">
        <a
          href="#download"
          class="btn btn--primary btn--lg hero__download-btn"
          id="hero-download-btn"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
          <span id="hero-download-label">{t.hero.downloadFallback}</span>
        </a>

        <a
          href="https://github.com/Bokuchi-Editor/bokuchi"
          class="btn btn--ghost btn--lg"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
          </svg>
          {t.hero.githubCta}
        </a>
      </div>

      <!-- Stats row -->
      <div class="hero__stats reveal" style="animation-delay: 0.4s">
        <div class="hero__stat">
          <span class="hero__stat-value">v<span class="version-badge">0.4.1</span></span>
          <span class="hero__stat-label">{isJa ? '最新版' : 'Latest'}</span>
        </div>
        <div class="hero__stat-divider" aria-hidden="true"></div>
        <div class="hero__stat">
          <span class="hero__stat-value">14</span>
          <span class="hero__stat-label">{isJa ? '言語対応' : 'Languages'}</span>
        </div>
        <div class="hero__stat-divider" aria-hidden="true"></div>
        <div class="hero__stat">
          <span class="hero__stat-value">3</span>
          <span class="hero__stat-label">{isJa ? 'プラットフォーム' : 'Platforms'}</span>
        </div>
      </div>
    </div>

    <!-- Right: Screenshot -->
    <div class="hero__screenshot-wrap reveal" style="animation-delay: 0.2s">
      <div class="app-window hero__app-window">
        <div class="app-window__titlebar">
          <span class="app-window__dot app-window__dot--close"></span>
          <span class="app-window__dot app-window__dot--min"></span>
          <span class="app-window__dot app-window__dot--max"></span>
          <span class="hero__window-title">document.md — Bokuchi</span>
        </div>
        <div class="app-window__body">
          <img
            src="https://raw.githubusercontent.com/shinya/image-storage/master/bokuchi/ss.png"
            alt={t.hero.screenshotAlt}
            width="1200"
            height="750"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="hero__scroll-indicator" aria-hidden="true">
    <div class="hero__scroll-line"></div>
  </div>
</section>

<script define:vars={{ downloadCta: t.hero.downloadCta, downloadFallback: t.hero.downloadFallback }}>
  // OS detection for hero download button
  function detectOS() {
    const ua = navigator.userAgent;
    if (/Mac/.test(ua)) return 'macOS';
    if (/Win/.test(ua)) return 'Windows';
    if (/Linux/.test(ua)) return 'Linux';
    return null;
  }

  const os = detectOS();
  const label = document.getElementById('hero-download-label');
  if (label && os) {
    label.textContent = `${downloadCta} ${os}`;
  } else if (label) {
    label.textContent = downloadFallback;
  }
</script>

<style>
.hero {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #06060f 0%, #0c0b20 45%, #110a22 100%);
  color: white;
  display: flex;
  align-items: center;
  overflow: hidden;
  padding-top: var(--nav-height);
}

/* Grid background */
.hero__bg-grid {
  position: absolute;
  inset: 0;
  background-image:
    linear-gradient(rgba(79, 126, 247, 0.04) 1px, transparent 1px),
    linear-gradient(90deg, rgba(79, 126, 247, 0.04) 1px, transparent 1px);
  background-size: 60px 60px;
  mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black 30%, transparent 100%);
  -webkit-mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black 30%, transparent 100%);
}

/* Glow blobs */
.hero__blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80px);
  pointer-events: none;
}

.hero__blob--1 {
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, rgba(79, 126, 247, 0.15) 0%, transparent 70%);
  top: -100px;
  right: 0;
}

.hero__blob--2 {
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, rgba(167, 139, 250, 0.12) 0%, transparent 70%);
  bottom: -100px;
  left: 10%;
}

.hero__inner {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  gap: 4rem;
  padding-top: 3rem;
  padding-bottom: 5rem;
  position: relative;
  z-index: 1;
}

/* Badge */
.hero__badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: rgba(79, 126, 247, 0.12);
  border: 1px solid rgba(79, 126, 247, 0.3);
  color: var(--color-primary-light);
  font-size: 0.8125rem;
  font-weight: 600;
  letter-spacing: 0.03em;
  padding: 0.375rem 0.875rem;
  border-radius: 999px;
  margin-bottom: 1.25rem;
}

.hero__badge-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #28c840;
  box-shadow: 0 0 6px #28c840;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* Headline */
.hero__headline {
  font-size: clamp(2rem, 4vw, 3.5rem);
  font-weight: 800;
  line-height: 1.1;
  letter-spacing: -0.03em;
  margin-bottom: 1.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.1em;
}

.hero__headline .gradient-text {
  background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 50%, #f472b6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Subheadline */
.hero__subheadline {
  font-size: clamp(1rem, 1.5vw, 1.125rem);
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
  margin-bottom: 2rem;
  max-width: 42ch;
}

/* CTA */
.hero__cta {
  display: flex;
  flex-wrap: wrap;
  gap: 0.875rem;
  margin-bottom: 2.5rem;
}

.hero__download-btn {
  min-width: 220px;
}

/* Stats */
.hero__stats {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.hero__stat {
  display: flex;
  flex-direction: column;
  gap: 0.125rem;
}

.hero__stat-value {
  font-size: 1.125rem;
  font-weight: 700;
  color: white;
}

.hero__stat-label {
  font-size: 0.75rem;
  color: rgba(255, 255, 255, 0.45);
  letter-spacing: 0.03em;
  text-transform: uppercase;
}

.hero__stat-divider {
  width: 1px;
  height: 2rem;
  background: rgba(255, 255, 255, 0.12);
}

/* Screenshot */
.hero__screenshot-wrap {
  position: relative;
}

.hero__screenshot-wrap::before {
  content: '';
  position: absolute;
  inset: -2px;
  background: linear-gradient(135deg, rgba(79, 126, 247, 0.3), rgba(167, 139, 250, 0.2));
  border-radius: calc(var(--radius-lg) + 2px);
  z-index: -1;
  filter: blur(20px);
}

.hero__app-window {
  animation: float 6s ease-in-out infinite;
  will-change: transform;
}

.hero__window-title {
  color: rgba(255, 255, 255, 0.35);
  font-size: 0.75rem;
  margin-left: 0.5rem;
}

/* Scroll indicator */
.hero__scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hero__scroll-line {
  width: 1px;
  height: 48px;
  background: linear-gradient(to bottom, rgba(255,255,255,0.4), transparent);
  animation: scrollLine 2s ease-in-out infinite;
}

@keyframes scrollLine {
  0%, 100% { transform: scaleY(1); opacity: 1; }
  50%       { transform: scaleY(0.5); opacity: 0.4; }
}

/* Responsive */
@media (max-width: 1024px) {
  .hero__inner {
    grid-template-columns: 1fr;
    gap: 3rem;
    padding-top: 2rem;
  }

  .hero__screenshot-wrap {
    max-width: 640px;
    margin: 0 auto;
    width: 100%;
  }

  .hero__headline {
    font-size: clamp(2rem, 5vw, 3rem);
  }
}

@media (max-width: 640px) {
  .hero {
    min-height: calc(100svh);
  }

  .hero__cta {
    flex-direction: column;
  }

  .hero__download-btn {
    min-width: unset;
    width: 100%;
    justify-content: center;
  }

  .hero__scroll-indicator {
    display: none;
  }
}
</style>
